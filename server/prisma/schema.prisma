generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  nombre    String
  apellido  String?
  telefono  String?
  rol       String   @default("cliente")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ordenes   Orden[]
  carritos  Carrito[]
}

model Categoria {
  id        Int      @id @default(autoincrement())
  nombre    String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())

  productos Producto[]
}

model Producto {
  id            Int      @id @default(autoincrement())
  nombre        String
  descripcion   String?
  precio        Decimal  @db.Decimal(10, 2)
  imagenUrl     String?
  disenoUrl     String?
  disenoConfig  Json?
  categoriaId   Int
  activo        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  categoria     Categoria @relation(fields: [categoriaId], references: [id])
  talles        Talle[]
  colores       ProductoColor[]
  carritoItems  CarritoItem[]
  ordenItems    OrdenItem[]
}

model Talle {
  id         Int     @id @default(autoincrement())
  productoId Int
  talle      String
  stock      Int     @default(0)

  producto   Producto @relation(fields: [productoId], references: [id], onDelete: Cascade)

  @@unique([productoId, talle])
}

model Color {
  id        Int      @id @default(autoincrement())
  nombre    String   @unique
  claseCss  String
  codigoHex String

  productos ProductoColor[]
}

model ProductoColor {
  id         Int @id @default(autoincrement())
  productoId Int
  colorId    Int

  producto   Producto @relation(fields: [productoId], references: [id], onDelete: Cascade)
  color      Color    @relation(fields: [colorId], references: [id])

  @@unique([productoId, colorId])
}

model Carrito {
  id        Int      @id @default(autoincrement())
  usuarioId Int?     @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  usuario   Usuario?      @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  items     CarritoItem[]
}

model CarritoItem {
  id              Int     @id @default(autoincrement())
  carritoId       Int
  productoId      Int
  prenda          String
  talle           String
  color           String
  cantidad        Int     @default(1)
  precioUnitario  Decimal @db.Decimal(10, 2)

  carrito         Carrito  @relation(fields: [carritoId], references: [id], onDelete: Cascade)
  producto        Producto @relation(fields: [productoId], references: [id])
}

model Orden {
  id              Int      @id @default(autoincrement())
  usuarioId       Int
  total           Decimal  @db.Decimal(10, 2)
  estado          String   @default("pendiente")
  metodoPago      String?
  stripePaymentId String?
  mpPaymentId     String?
  mpStatus        String?
  mpStatusDetail  String?
  
  // Datos de env√≠o
  direccionEnvio  String?
  ciudadEnvio     String?
  codigoPostal    String?
  provinciaEnvio  String?
  telefonoContacto String?
  notasEnvio      String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  usuario         Usuario    @relation(fields: [usuarioId], references: [id])
  items           OrdenItem[]
}

model OrdenItem {
  id             Int     @id @default(autoincrement())
  ordenId        Int
  productoId     Int
  prenda         String
  talle          String
  color          String
  cantidad       Int
  precioUnitario Decimal @db.Decimal(10, 2)

  orden          Orden    @relation(fields: [ordenId], references: [id], onDelete: Cascade)
  producto       Producto @relation(fields: [productoId], references: [id])
}
